<Window x:Class="project.borcSorgula"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="borcSorgula" Height="300" Width="300" Background="#FF1E5A70">
    <Border Margin="0,0,2,1">
        <Border.Background>
            <ImageBrush ImageSource="images/ss.jpg"/>
        </Border.Background>
        <StackPanel Margin="20,10,20,-13">
            <Label Content="Borç Sorgulama" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Borcunu sorgulamak istediğiniz hesap no :" Foreground="White" Margin="6,0,-18,0"/>
            <TextBox Name="hesapNo" Background="#FF595959" Foreground="White" FontSize="14"/>
            <Button x:Name="btnSorgula" Click="btnSorgula_Click" Content="Sorgula!" Margin="60,30" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF00B29A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Border>

</Window>
