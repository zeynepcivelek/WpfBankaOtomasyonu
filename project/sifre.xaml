<Window x:Class="project.sifre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="sifre" Height="300" Width="300" Background="#FF1E5A70">
    <Border Margin="0,0,2,1">
        <Border.Background>
            <ImageBrush ImageSource="images/ss.jpg"/>
        </Border.Background>
        <StackPanel Margin="20,10,20,-13">
            <Label Content="Şifre Değiştirme" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Lütfen şuan kullandığınız şifrenizi girin :" Foreground="White"/>
            <TextBox Name="txtoldsifre" Background="#FF595959" Foreground="White" FontSize="14"/>
            <Label Content="Değiştirmek istediğiniz şifrenizi girin :" Foreground="White"/>
            <TextBox Name="txtnewsifre" Background="#FF595959" Foreground="White" FontSize="14"/>
            <Button x:Name="btnSifre" Click="btnSifre_Click" Content="Şifre Değiştir!" Margin="60,30" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF00B29A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Border>
</Window>
