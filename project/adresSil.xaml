<Window x:Class="project.adresSil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="adresSil" Height="300" Width="300" Background="#FF1E5A70">
    <Border Margin="0,0,2,-1">
        <Border.Background>
            <ImageBrush ImageSource="images/ss.jpg"/>
        </Border.Background>
        <StackPanel Margin="20,10,20,-13">
            <Label Content="Adres Silme" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Silmek istediğiniz adres tipi:" Foreground="White"/>
            <TextBox Name="txtAtip" Background="#FF595959" Foreground="White" FontSize="14"/>
            <Button x:Name="btnadresSil" Click="btnadresSil_Click" Content="Sil!" Margin="60,30" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF49B3AB" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Border>
</Window>
