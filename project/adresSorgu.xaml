<Window x:Class="project.adresSorgu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="adresSorgu" Height="300" Width="300" Background="#FF1E5A70">
    <Border Margin="0,0,2,1">
        <Border.Background>
            <ImageBrush ImageSource="images/ss.jpg"/>
        </Border.Background>
        <StackPanel Margin="20,10,20,-13">
            <Label Content="Adres Sorgulama" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Adresini sorgulamak istediğiniz müşteri adı :" Foreground="White" Margin="-16,0,-18,0"/>
            <TextBox Name="txtUsername1" Background="#FF595959" Foreground="White" FontSize="14"/>
            <Button x:Name="btnSorgula" Click="btnSorgula_Click" Content="Sorgula!" Margin="60,30" Background="#FF1E5A70" Foreground="White"/>
        </StackPanel>
    </Border>


</Window>
